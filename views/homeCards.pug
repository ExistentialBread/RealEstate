div(class="row row-cols-3")
    for home in inventory
        div(class="col mb-4")
            div(class="card h-100")
                img(src=home.img class="card-img-top" alt="Lovely")
                div(class="card-body")
                    h5(class="card-title") #{home.name}
                ul(class="list-group list-group-flush")
                    li(class="list-group-item") <strong>Location:</strong> #{home.city} 
                    li(class="list-group-item") <strong>Price:</strong>  #{"$" +     home.price.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')}
                    li(class="list-group-item") <strong>Size:</strong>  #{home.size} sq ft
                div(class="card-body")
                    a(href="/inventory/" + home.id class="card-link") See More
