div(class="row row-cols-3")
    for job in jobs
        div(class="col mb-4")
            div(class="card h-100")
                img(src=job.img class="card-img-top" alt="Lovely")
                div(class="card-body")
                    h5(class="card-title") #{job.name}
                ul(class="list-group list-group-flush")
                    li(class="list-group-item") <strong>Pay:</strong>  #{"$" + job.pay.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')}
                    li(class="list-group-item") <strong>Length:</strong>  #{job.ttc.toTime()}
                div(class="card-body")
                    if (employed)
                        p.text-danger #[em Apply for this job when you're done with your current one!]
                    else 
                        form(method="POST")
                            input(name="id" type="hidden" value= job._id)
                            button(type="submit" class="btn btn-primary") Apply
