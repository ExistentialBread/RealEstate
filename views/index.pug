extends layout.pug

block content
    div#carousel(class="carousel slide" data-ride="carousel")
        ol(class="carousel-indicators")
            for index in ["0","1","2"]
                if index=="0"
                    li(data-target="#carousel" data-slide-to=index active)
                else
                    li(data-target="#carousel" data-slide-to=index)
        div(class="carousel-inner")

            div(class="carousel-item active")
                img(src="/images/carouselImg0.jpg" class="d-block w-100 carousel-img" alt="Good House, Bravo")
                div(class="carousel-caption d-none d-md-block")
                    h1 Find the right house for you
                    h3 Browse our impressive selection of 4* houses!
                    a(href="/inventory" class="btn btn-primary" role="button") Browse
                    h5 <em>*No garuntee that this number is accurate</em>
            div(class="carousel-item")
                img(src="/images/carouselImg1.jpg" class="d-block w-100 carousel-img" alt="Beautiful Plans")
                div(class="carousel-caption d-none d-md-block")
                    h1 A Bird's Eye View
                    h3 Explore detailed floor plans!*
                    p *Not really
                    a(href="/inventory" class="btn btn-primary" role="button") Browse
            div(class="carousel-item")
                img(src="/images/carouselImg2.jpg" class="d-block w-100 carousel-img")
                div(class="carousel-caption d-none d-md-block")
                    h1 No Cash? No Problem.
                    h3 Work here for your money!
                    a(href="/jobs" class="btn btn-primary" role="button") Find a Job


        a(class="carousel-control-prev" href="#carousel" role="button" data-slide="prev")
            span(class="carousel-control-prev-icon" aria-hidden="true")
            span(class="sr-only") Previous
        a(class="carousel-control-next" href="#carousel" role="button" data-slide="next")
            span(class="carousel-control-next-icon" aria-hidden="true")
            span(class="sr-only") Next


